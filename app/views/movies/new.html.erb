<h1>Movies#new</h1>
<p>Find me in app/views/movies/new.html.erb</p>


<h6>New movie</h6>
<%= simple_form_for [@movie] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :overview %>
  <%= f.text_field :overview %>
  <%= f.label :poster_url %>
  <%= f.text_field :poster_url %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
